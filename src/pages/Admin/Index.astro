---

import Nav from "../../modules/admin/Sidebar.astro";
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title = "One Konek",
  description = "A CRM Website Tailored for the use of OneKonek Internet Solutions",
  image,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:image" content={image} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen">
    
	  <Nav/>
      <div id = "content">
      </div>
      <script type="module" src="../../../scripts/dynamicLoader.js"></script>
  </body>
</html>
